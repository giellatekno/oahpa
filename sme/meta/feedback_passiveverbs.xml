    <l stem="2syll">
      <!-- need new attribute instead of subclass -->
      <msg subclass="Der/PassL">bisyllabic_stem</msg>
      <note>steminfo</note>
    </l>
    <l stem="3syll">
      <msg subclass="Der/PassL">trisyllabic_stem</msg>
      <note>steminfo</note>
    </l>
    <l stem="Csyll">
      <msg subclass="Der/PassL">contracted_stem</msg>
      <note>steminfo</note>
    </l>
    <l stem="2syll" gradation="extrastrong">
      <msg subclass="Der/PassL">extra_strong_grade</msg>
      <note>gáddjojuvvot</note>
    </l>
    <l stem="2syll" diphthong="yes">
      <msg subclass="Der/PassL">diphthong_simplification</msg>
      <note>vižžojuvvot</note>
    </l>
    <l stem="3syll">
      <msg subclass="Der/PassL">uvvot</msg>
      <note>muitaluvvot</note>
    </l>
    <l stem="2syll">
      <msg subclass="Der/PassL">ojuvvot</msg>
      <note>borrojuvvot</note>
    </l>
    <l stem="Csyll">
      <msg subclass="Der/PassL">juvvot</msg>
      <note>biđgejuvvot</note>
    </l>
  </stems>
</feedback>
