<dialogue name="coffee">
  
  <topic name="Buorre_beaivi" image="dialogue_coffee.png">
    <utt type="opening" name="buorre_beaivi">
      <text>Buorre beaivi! Bures boahtin mu geahčai! Suohtas oaidnit du!</text>
    </utt>
  </topic>  

  <topic name="mannat">
    <utt type="question" name="Manne_go_stohpui">
      <text>Dál moai gáfestalle. Manne go stohpui?</text>
      <alt target="neg" link="Manne_go_gievkkanii"/>
      <alt target="default">
	<text>De manne stohpui.</text>
      </alt>
 	<facit>Juo, de manne</facit>   
 	</utt>
  
    <utt type="question" name="Manne_go_gievkkanii">
      <text>Gievkkanis lea maid vuogas čohkkát. Lássaráiggis oaidná meara. Manne go gievkkanii?</text>
      <alt target="pos">
	<text>Gievkkanis lea buorre.</text>
      </alt>
      <alt target="default">
	<text>Dalle manne stohpui.</text>
      </alt>
 	<facit>Juo, de manne</facit>   
    </utt>

    <utt type="closing" name="cohkkat_closing">
      <text>Mun lean okto ruovttus odne.</text>
      </utt>            
  </topic>

  <topic name="juhkat">    
    <utt type="question" name="Haliidat_go_gafe_vai_deaja">
      <text>Háliidat go gáfe vai deaja?</text>
      <alt target="gaffe" link="Geavahat_go_sohkkara"/>
      <alt target="tea" link="Haliidat_go_honnega"/>
      <alt target="neg" link="Maid_juhkat"/>
      <alt target="default"><text>Mus ii leat.</text>
      </alt>
 	<facit>Háliidan deaja</facit>   
    </utt>  
    
    <utt type="question" name="Maid_juhkat">
	<word class="DRINK-COFFEEBREAK"/>
      <text>Dás oainnát makkár juhkamušat mus leat. Maid háliidat juhkat?</text>
      <alt target="target" variable="DRINK" link="Buvttan_dutnje"/>
      <alt target="default" link="juhkat_closing"/>
 	<facit>Háliidan čázi</facit>   
    </utt>

    <utt type="question" name="Buvttan_dutnje">
	<text>Mun buvttán dutnje DRINK . Mo dus manná dán áigge?</text>
	<element id="DRINK">
	  <grammar tag="N+Sg+Acc"/>
	</element> 
      <alt target="default" link="juhkat_closing"/>
 	<facit>Mus manná hui bures</facit>   
    </utt>  
    
    <utt type="question" name="Haliidat_go_honnega">
      <text>Háliidat go honnega?</text>
      <alt target="neg" link="Geavahat_go_sohkkara"/>
      <alt target="default" link="Geavahat_go_mielkki"/>
 	<facit>In hálit</facit>   
    </utt>
    
    <utt type="question" name="Geavahat_go_sohkkara">
      <text>Geavahat go sohkkara?</text>
      <alt target="default" link="Geavahat_go_mielkki"/>   
 	<facit>In geavat</facit>   
    </utt>
    
    <utt type="question" name="Geavahat_go_mielkki">
      <text>Geavahat go mielkki?</text>
      <alt target="default">
	<text>Dá lea gohppu. Leage buorre.</text>
      </alt>
 	<facit>De geavahan</facit>   
    </utt>
    
    
    <utt type="closing" name="juhkat_closing">
      <text>Galggašii leat juoga borrat maid...</text>
    </utt>
  </topic>
  
  <topic name="gáhkku">
    <utt type="opening" name="Mus_lea_lakcagahkku">
      <text>Mus lea lákcagáhkku mii bázii mu riegádanbeaifeasttas.</text>
    </utt>
    <utt type="question" name="Haliidat_go_gahku">
      <text>Háliidat go gáhku?</text>
      <alt target="pos"><text>Mun buvttán gáhku!</text></alt>
      <alt target="default"><text>In sáhte fállat eará odne.</text></alt>
 	<facit>De háliidan</facit>   
    </utt>
    
    <utt type="closing" name="gahkku_closing">
      <text>Suohtas duinna gáfestallat.</text>
    </utt>
    
    
  </topic>
  
  <topic name="Giitu_fitnamis">
    <utt type="closing" name="dialogue_closing">
      <text>Giitu fitnamis!</text>
    </utt>
  </topic>
</dialogue>
