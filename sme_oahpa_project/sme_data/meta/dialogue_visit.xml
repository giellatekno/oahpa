<dialogue name="visit">
  
  <topic name="Buorre_beaivi" image="visit001.jpg">
    <utt type="opening" name="buorre_beaivi">
      <text>Buorre beaivi! Bures boahtin mu geahčái!</text>
    </utt>
  </topic>  
  
  <topic name="viessogalvvut">
	  <utt type="question" name="gillet_go_veahkehit">
	<word class="ROOMS"/>
      <text>Mun lean aiddo fárren sisa iežan ođđa orrunsadjái. Mus leat lossa viessogálvvut dáppe feaskáris. Gillešit go veahkehit mu?</text>
     <alt target="default" link="gos_dus_lea_TV"/>
      <alt target="neg" link="gos_dus_lea_TV">
      <text>Gal mun oaččun eará veahki losimus diŋggaide, muhto don fertet veaháš veahkehit.</text>
      </alt>
 	<facit>Juo, de gillen</facit>   
      </utt>

    <utt type="question" name="gos_dus_lea_TV">
      <text>Mus lea TV dás. Guđe lanjas TV lea du orrunsajis?</text>
      <alt target="default" link="gosa_bidjat_TV">
      </alt>
 	<facit>Mu TV lea stobus</facit>   
    </utt>

    <utt type="question" name="gosa_bidjat_TV">
      <text>Guđe latnjii moai bidje mu TV?</text>
      <alt target="hivsset" link="gosa_bidjat_TV">
      <text>Dat gal ii heive! Geahččal ođđasit.</text>
            </alt>
      <alt target="basadanlatnja" link="gosa_bidjat_TV">
      <text>Doppe lea njuoska áibmu, mii sáhttá bilidit mu TV. Geahččal ođđasit.</text>
            </alt>
      <alt target="default" link="gosa_bidjat_beavddi">
	<text>Buorre evttohus. Moai gudde dan ovttas dohko.</text>       
	</alt>
 	<facit>Moai bidje dan oađđenlatnjii</facit>   
    </utt>

    <utt type="question" name="gosa_bidjat_beavddi">
      <text>Gosa moai bidje boradanbeavddi?</text>
      <alt target="hivsset" link="gosa_bidjat_beavddi">
      <text>Ii heive dohko mu mielas! Geahččal ođđasit.</text>
    </alt>
      <alt target="default" link="gosa_bidjat_gamahildu">
     </alt>
 	<facit>Moai bidje dan gievkkanii</facit>   
    </utt>

    <utt type="question" name="gosa_bidjat_gamahildu">
      <text>Lean ovtta oaivilis. Naba gosa moai bidje gámahildu?</text>
      <alt target="hivsset" link="gosa_bidjat_gamahildu">
      <text>In leat ovtta oaivilis! Geahččal ođđasit.</text>
            </alt>
      <alt target="default" link="gosa_bidjat_lahttelamppa">
      <text>Dat lea geahpas. Mun sáhtán ieš doalvut dan dohko.</text>
      </alt>
 	<facit>Moai bidje dan feaskárii</facit>   
    </utt>

    <utt type="question" name="gosa_bidjat_lahttelamppa">
      <text>Guđe latnjii moai bidje láhttelámppá?</text>
      <alt target="hivsset" link="gosa_bidjat_lahttelamppa">
      <text>Doppe in dárbbaš láhttelámppá! Geahččal ođđasit.</text>
            </alt>
      <alt target="default" link="gosa_bidjat_lohkanlamppa">
      <text>Dat gal heive!</text>
      </alt>
 	<facit>Moai bidje dan stohpui</facit>   
    </utt>

    <utt type="question" name="gosa_bidjat_lohkanlamppa">
      <text>Guđe latnjii moai bidje lohkanlámppá?</text>
      <alt target="hivsset" link="gosa_bidjat_lohkanlamppa">
      <text>Ii leat buorre evttohus! Geahččal ođđasit.</text>
    </alt>
      <alt target="default" link="gos_dus_lea_soffa">
      <text>Buorre evttohus!</text>
    </alt>
 	<facit>Moai bidje dan oađđenlatnjii</facit>   
    </utt>


    <utt type="question" name="gos_dus_lea_soffa">
      <text>Guđe lanjas soffá lea du orrunsajis?</text>
      <alt target="default" link="gosa_bidjat_soffa">
      </alt>
 	<facit>Mu soffá lea stobus</facit>   
    </utt>


    <utt type="question" name="gosa_bidjat_soffa">
      <text>Guđe latnjii moai bidje mu soffá?</text>
      <alt target="hivsset" link="gosa_bidjat_soffa">
      <text>Ii dat gal čága dohko! Geahččal ođđasit.</text>
      </alt>
      <alt target="default" link="gosa_bidjat_lahtteranu">
      <text>Mu soffá lea oalle lossat!</text>
      </alt>
 	<facit>Moai bidje dan stohpui</facit>   
    </utt>


    <utt type="question" name="gosa_bidjat_lahtteranu">
      <text>Naba gosa moai bidje láhtteránu?</text>
      <alt target="default" link="gosa_bidjat_speadjala">
      <text>Gal mun birgen okto dainna!</text>
      </alt>
 	<facit>Moai bidje dan oađđenlatnjii</facit>   
    </utt>

    <utt type="question" name="gosa_bidjat_speadjala">
      <text>Guđe latnjii moai bidje mu stuora speadjala?</text>
      <alt target="hivsset" link="gosa_bidjat_speadjala">
      <text>Ii leat buorre evttohus! Geahččal ođđasit.</text>
    </alt>
      <alt target="default" link="dialogue_closing">
      </alt>
 	<facit>Moai bidje dan feaskárii</facit>   
    </utt>


    <utt type="closing" name="dialogue_closing">
      <text>Giitu veahki ovddas! Dál moai gáfestalle.</text>
    </utt>
  </topic>  


</dialogue>
